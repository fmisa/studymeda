<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<properties resource="database.properties" />

    <settings>
        <!-- NEWER ? MYBATIS  <setting name="logImpl" value="LOG4J"/> -->
        <setting name="cacheEnabled" value="false"/>
        <setting name="lazyLoadingEnabled" value="false"/>
        <setting name="multipleResultSetsEnabled" value="true"/>
        <setting name="useColumnLabel" value="true"/>
        <setting name="useGeneratedKeys" value="true"/>
        <setting name="autoMappingBehavior" value="PARTIAL"/>
        <!-- NEWER ? MYBATIS <setting name="autoMappingUnknownColumnBehavior" value="WARNING"/> -->
        <setting name="defaultExecutorType" value="SIMPLE"/>
        <setting name="defaultStatementTimeout" value="25"/>
        <!-- NEWER ? MYBATIS <setting name="defaultFetchSize" value="100"/> -->
        <setting name="safeRowBoundsEnabled" value="false"/>
        <setting name="mapUnderscoreToCamelCase" value="false"/>
        <!-- NEWER ? MYBATIS  <setting name="localCacheScope" value="SESSION"/> -->
        <!-- NEWER ? MYBATIS <setting name="jdbcTypeForNull" value="OTHER"/> -->
        <!-- NEWER ? MYBATIS <setting name="lazyLoadTriggerMethods" value="equals,clone,hashCode,toString"/> -->
        <setting name="lazyLoadingEnabled" value="false" />
    </settings>

    <typeAliases>
        <typeAlias alias="Category" type="ca.studymedia.model.Category"/>
        <typeAlias alias="Certification" type="ca.studymedia.model.Certification"/>
        <typeAlias alias="Comments" type="ca.studymedia.model.Comments"/>
        <typeAlias alias="Material" type="ca.studymedia.model.Material"/>
        <typeAlias alias="Materialactivity" type="ca.studymedia.model.Materialactivity"/>
        <typeAlias alias="Resource" type="ca.studymedia.model.Resource"/>
        <typeAlias alias="Resourcesupport" type="ca.studymedia.model.Resourcesupport"/>
        <typeAlias alias="Subtype" type="ca.studymedia.model.Subtype"/>
        <typeAlias alias="Type" type="ca.studymedia.model.Type"/>
        <typeAlias alias="User" type="ca.studymedia.model.User"/>
    </typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
<!--				<property name="driver" value="${db.dev.driver}" />
				<property name="url" value="${db.dev.url}" />
				<property name="username" value="${db.dev.user}" />
				<property name="password" value="${db.dev.pass}" />-->
                <property name="driver" value="com.mysql.jdbc.Driver" />
                <property name="url" value="jdbc:mysql://localhost/studymedia" />
                <property name="username" value="root" />
                <property name="password" value="Nexus600" />
			</dataSource>
		</environment>

		<environment id="production">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
<!--				<property name="driver" value="${db.prd.driver}" />
				<property name="url" value="${db.prd.url}" />
				<property name="username" value="${db.prd.user}" />
				<property name="password" value="${db.prd.pass}" />-->
                <property name="driver" value="com.mysql.jdbc.Driver" />
                <property name="url" value="jdbc:mysql://localhost/studymedia" />
                <property name="username" value="root" />
                <property name="password" value="Nexus600" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
        <mapper resource="mybatis/mapper/CategoryMapper.xml" />
        <mapper resource="mybatis/mapper/CertificationMapper.xml" />
        <mapper resource="mybatis/mapper/CommentsMapper.xml" />
        <mapper resource="mybatis/mapper/MaterialactivityMapper.xml" />
        <mapper resource="mybatis/mapper/MaterialMapper.xml" />
        <mapper resource="mybatis/mapper/ResourceMapper.xml" />
        <mapper resource="mybatis/mapper/ResourcesupportMapper.xml" />
        <mapper resource="mybatis/mapper/SubtypeMapper.xml" />
        <mapper resource="mybatis/mapper/TypeMapper.xml" />
        <mapper resource="mybatis/mapper/UserMapper.xml" />
	</mappers>
</configuration>